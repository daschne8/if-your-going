<% home_path = '' %>
<% if logged_in? %>
  <% if current_occupant.admin == true %>
    <% home_path = displays_path %>
  <% else %>
    <% home_path = establishment_path(current_occupant.establishment) %>
  <% end %>
<% else %>
  <% home_path = login_path %>
<% end %>
<%= link_to "Home", home_path %>
<% if logged_in? %>
  <%= link_to "My Page", establishment_occupant_path(current_occupant.establishment,current_occupant) %>
  <%= link_to('Logout', logout_url, method: :post) %>
<% else %>
    <%= link_to'Login', login_url %>
    <%= link_to "Sign up", new_occupant_path %>
<% end %>
